<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/white">
    <Button
            android:text="@string/button_label_count"
            android:layout_height="wrap_content"
            android:id="@+id/button_count"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:onClick="countUp"
            android:textSize="60sp"
            android:layout_width="399dp"
            app:layout_constraintStart_toEndOf="@+id/button_toast"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_toast"/>
    <Button
            android:text="@string/button_label_toast"
            android:layout_height="wrap_content"
            android:id="@+id/button_toast"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:onClick="showToast"
            android:textSize="60sp"
            android:layout_width="398dp" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="1dp"/>
    <TextView
            android:text="@string/count_initial_value"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/show_count"
            android:textSize="200sp"
            android:background="@color/colorSecondary"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_toast"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.423"
            app:layout_constraintHorizontal_bias="0.402" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="485dp"
            android:layout_height="66dp"
            android:text="@string/text_horizontal_tablet"
            android:ems="10"
            android:id="@+id/horizontal_text"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:minHeight="48dp" android:typeface="sans"
            android:gravity="center" android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/show_count" android:layout_marginBottom="24dp"
            android:visibility="visible" tools:visibility="visible" android:fadingEdge="horizontal"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
